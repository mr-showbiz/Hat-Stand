<?xml version="1.0" encoding="utf-8"?>
<views:PlayingPieceViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
							xmlns:s="library://ns.adobe.com/flex/spark" 
							xmlns:views="hatstand.views.*"
							x="{ Number(draughtsPiece.x) * 30 }" y="{ Number(draughtsPiece.y) * 30}">
	
	<s:Ellipse width="30" height="30">
		<s:stroke>
			<s:LinearGradientStroke>
				<s:GradientEntry color="#444444"/>
				<s:GradientEntry color="#EEEEEE"/>
			</s:LinearGradientStroke>
		</s:stroke>
		<s:fill>
			<s:SolidColor color="{ playingPieceColor }"/>
		</s:fill>
	</s:Ellipse>
	
</views:PlayingPieceViewBase>
